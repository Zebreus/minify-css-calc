{
  "name": "minify-css-calc",
  "version": "0.0.0",
  "description": "Parse and minify css calc statements",
  "keywords": [
    "css",
    "calc",
    "parser",
    "minify",
    "optimize",
    "math",
    "postcss",
    "preprocessor"
  ],
  "scripts": {
    "test": "jest --coverage && eslint .",
    "generate-parser": "peggy -o src/cssCalcParser.js src/cssCalcParser.peggy --format commonjs"
  },
  "author": "Zebreus <lennart@googlemail.com>",
  "license": "MIT",
  "repository": "Zebreus/minify-css-calc",
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.3",
    "@types/jest": "^28.1.1",
    "clean-publish": "^3.4.2",
    "css-validator": "^0.11.0",
    "eslint": "^8.0.1",
    "eslint-plugin-jest": "^25.2.2",
    "jest": "^28.1.1",
    "peggy": "^2.0.1",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  }
}
